{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest - current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "${relativeFile}"
      ],
      "env": {
        "DEBUG": "true",
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Repodog - cut",
      "program": "${workspaceFolder}/cli/core/bin/repodog.mjs",
      "args": [
        "cut",
        "prepatch",
        "--tag", "alpha",
        "--dry-run"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Repodog - publish",
      "program": "${workspaceFolder}/cli/core/bin/repodog.mjs",
      "args": [
        "publish",
        "--verbose"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Repodog - write",
      "program": "${workspaceFolder}/cli/core/bin/repodog.mjs",
      "args": [
        "write",
        "test",
        "./cli/write/src/handler.ts",
        "--verbose"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "syncpack",
      "program": "${workspaceFolder}/node_modules/syncpack/dist/bin.js",
      "args": [
        "list-mismatches"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hygen",
      "program": "${workspaceFolder}/cli/new/node_modules/hygen/dist/bin.js",
      "args": [
        "repo",
        "library",
        "--name", "name",
        "--desc", "desc",
        "--author", "Dylan Aubrey",
        "--homepage", "https://github.com/org/name",
        "--mainFilename", "main",
        "--language", "typescript",
        "--packageManager", "pnpm",
        "--packageManagerTemporaryCmd", "pnpm dlx",
      ],
      "env": {
        "DEBUG": "true",
        "HYGEN_TMPLS": "${workspaceFolder}/cli/new/_templates"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}